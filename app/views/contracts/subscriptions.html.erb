<div id="blue">
    <div class="container">
    <div class="row">
      <h3 style="float: right;">Subscribite para recibir notificaciones de licitaciones</h3>
    </div><!-- /row -->
    </div><!-- /container -->
</div><!-- /blue -->


    <div class="container">
		<form class="form-horizontal" action="/">

		<div class="row">
			<div class="col-lg-8 col-lg-offset-2">
				  <div class="form-group">
					    <input type="email" size="75" class="form-control input-lg" name="objeto" value="<%= @objeto %>" placeholder="Ingrese su email">
				  </div>
				  <h1>Filtra las publicaciones que recibiras:</h1>
				  <div class="form-group">
					    <input type="text" size="75" class="form-control input-lg" name="objeto" id="objeto" value="<%= @objeto %>" placeholder="Palabras clave">
				  </div>
				  <div class="form-group">
				  	<%= autocomplete_field_tag 'entity', @entity? @entity.name : '', autocomplete_entity_name_contracts_path, {:class=> "form-control input-lg", :size => 75, :placeholder => "Entidad", :id => "entidad", 'data-auto-focus' => true} %>
				  </div>
				  <div class="form-group">
					<%=  
				    	collection_select(:region, :id, Region.all, :id, :name, {:include_blank => 'TODOS LOS DEPARTAMENTOS'}, {:class=> "form-control input-lg"})
				    %>
				  </div>
		  		  <div class="form-group">
					<%=  
				    	collection_select(:motive, :id, Motive.all, :id, :name, {:include_blank => 'TODOS LOS MOTIVOS'}, {:class=> "form-control input-lg"})
				    %>
				  </div>
		  		  <div class="form-group">
					<%=  
				    	collection_select(:budget_item, :id, BudgetItem.all, :id, :name, {:include_blank => 'TODOS LOS ITEMS'}, {:class=> "form-control input-lg"})
				    %>
				  </div>
				  <button type="submit" class="col-sm-12 btn btn-lg btn-theme btn-default">Suscribirse</button>
			</div>
		</div>
		</form>	
		</div><!-- /row -->
    </div> <!-- /container -->

    <script>
		$('#objeto').tagsInput({
   'height':'50px',
   'width':'500px',
   'defaultText':'Palabras clave'});
    </script>
	
