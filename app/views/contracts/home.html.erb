<!-- *****************************************************************************************************************
	 HEADERWRAP
	 ***************************************************************************************************************** -->

	<div id="headerwrap">
	    <div class="container">
			<div class="row">
				<div class="col-lg-12">
					<h1>Buscar publicaciones de licitaciones en Bolivia
					<!--
						<span style="color: #DF151A;">Bo</span><span style="color: #F4F328;">li</span><span style="color: #00DA3C;">via</span</h1>
					-->
				</div>
			</div>
			<form class="form-horizontal" action="/">

			<div class="row">
				<div class="col-lg-8 col-lg-offset-2">
					  <div class="form-group">
						    <input type="text" size="75" class="form-control input-lg" name="objeto" id="objeto" value="<%= @objeto %>" placeholder="Palabras clave">
					  </div>
					  <div class="form-group">
					  	<%= autocomplete_field_tag 'entity', @entity? @entity.name : '', autocomplete_entity_name_contracts_path, {:class=> "form-control input-lg", :size => 75, :placeholder => "Entidad", :id => "entidad", 'data-auto-focus' => true} %>
					  </div>
					  <div class="form-group">

					  	    <h3><label for="status" style="color: white;" class="col-sm-2 control-label">Estado:</label></h3>

					  	    <div class="col-sm-10 ">
							<%=  
					    	collection_select(:status, :id, Status.all.order(:name), :id, :name, {:include_blank => 'TODOS LOS ESTADOS', :selected => @status_id}, {:class=> "form-control input-lg"})
					    	%>
					    	</div>
					  </div>

					  <div id="advanced_form" style="display: none;"> 
					  <div class="form-group">
						    <input type="date" name="start_date" class="form-control input-lg" value="<%= @start_date %>" placeholder="Fecha Inicio:">
					  </div>
					  <div class="form-group">
					     <input type="date"  name="end_date"  class="form-control input-lg" value="<%= @end_date %>"  placeholder="Fecha Fin:">
					  </div>
				  <div class="form-group">
					<%=  
				    	collection_select(:region, :id, Region.all.order(:name), :id, :name, {:include_blank => 'TODOS LOS DEPARTAMENTOS', :selected => @region_id }, {:class=> "form-control input-lg"})
				    %>
				  </div>
		  		  <div class="form-group">
					<%=  
				    	collection_select(:motive, :id, Motive.all.order(:name), :id, :name,  {prompt: 'TODOS LOS MOTIVOS', :selected => @motive_id }, {:class=> "form-control input-lg"})
				    %>
				  </div>
				  <!--
		  		  <div class="form-group">
					<%=  
				    	collection_select(:mode, :id, Mode.all.order(:name), :id, :name, {:include_blank => 'TODOS LOS MODOS'}, {:class=> "form-control input-lg"})
				    %>
				  </div>
				  -->
		  		  <div class="form-group">
					<%=  
				    	collection_select(:budget_item, :id, BudgetItem.all.order(:name), :id, :name, {:include_blank => 'TODOS LOS ITEMS', :selected => @budget_item}, {:class=> "form-control input-lg"})
				    %>
				  </div>
				  <!--
		  		  <div class="form-group">
					<%=  
				    	collection_select(:selection_method, :id, SelectionMethod.all.order(:name), :id, :name, {:include_blank => 'TODOS LOS TIPOS DE SELECCION'}, {:class=> "form-control input-lg"})
				    %>
				  </div>
					-->
				</div>
					<a  style="color: white; " id="advanced">Mostrar busqueda avanzada</a>
					  <br><br>			
					  <button type="submit" class="col-sm-12 btn btn-lg btn-theme btn-default">Buscar</button>
			</div>
			</form>	
			</div><!-- /row -->
	    </div> <!-- /container -->
	</div><!-- /headerwrap -->
	
<div class="container">
	<div id="contracts"><%= render 'contracts' %></div>
</div>

<script>
$(function() {
  $('a#advanced').click(function(event){
    event.preventDefault();
    $('div#advanced_form').toggle();
    var text = $('a#advanced').text();
    $('a#advanced').text(
        text == "Mostrar busqueda avanzada" ? "Ocultar busqueda avanzada" : "Mostrar busqueda avanzada");
  });
});
</script>