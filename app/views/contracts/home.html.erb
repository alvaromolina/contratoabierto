<!-- *****************************************************************************************************************
	 HEADERWRAP
	 ***************************************************************************************************************** -->

	<div id="headerwrap">
	    <div class="container">
			<div class="row">
				<div class="col-lg-12">
					<h1>Buscar publicaciones de licitaciones en Bolivia
					<!--
						<span style="color: #DF151A;">Bo</span><span style="color: #F4F328;">li</span><span style="color: #00DA3C;">via</span</h1>
					-->
				</div>
			</div>
			<form class="form-horizontal" action="/">

			<div class="row">
				<div class="col-lg-8 col-lg-offset-2">
					  <div class="form-group">
						    <input type="text" size="75" class="form-control input-lg" name="objeto" id="objeto" value="<%= @objeto %>" placeholder="Objeto Contrato">
					  </div>
					  <div class="form-group">
					  	<%= autocomplete_field_tag 'entity', @entity? @entity.name : '', autocomplete_entity_name_contracts_path, {:class=> "form-control input-lg", :size => 75, :placeholder => "Entidad", :id => "entidad", 'data-auto-focus' => true} %>
					  </div>
					  <div class="form-group">

					  	    <h3><label for="status" style="color: white;" class="col-sm-2 control-label">Estado:</label></h3>

					  	    <div class="col-sm-10 ">
							<%=  
					    	collection_select(:status, :id, Status.all, :id, :name, {:include_blank => 'TODOS LOS ESTADOS', :selected => "11"}, {:class=> "form-control input-lg"})
					    	%>
					    	</div>
					  </div>
					  <button type="submit" class="col-sm-12 btn btn-lg btn-theme btn-default">Buscar</button>
					  <a  style="color: white; " id="advanced">Mostrar busqueda avanzada</a>
					  <br><br>
					  <div id="advanced_form" style="display: none;"> 
					  <div class="form-group">
							<%=  
					    	collection_select(:region, :id, Region.all, :id, :name, {:include_blank => 'TODOS'}, {:class=> "form-control input-lg"})
					    	%>
					  </div>
					  <div class="form-group">
						    <input type="date" class="form-control input-lg" id="objeto" placeholder="Fecha Inicio:">
					  </div>
					  <div class="form-group">
					     <input type="date" class="form-control input-lg" id="objeto" placeholder="Fecha Fin:">
					  </div>
				  <div class="form-group">
					<%=  
				    	collection_select(:region, :id, Region.all, :id, :name, {:include_blank => 'TODOS LOS DEPARTAMENTOS'}, {:class=> "form-control input-lg"})
				    %>
				  </div>
		  		  <div class="form-group">
					<%=  
				    	collection_select(:motive, :id, Motive.all, :id, :name, {prompt: 'TODOS LOS MOTIVOS'}, {:class=> "form-control input-lg"})
				    %>
				  </div>
		  		  <div class="form-group">
					<%=  
				    	collection_select(:mode, :id, Mode.all, :id, :name, {:include_blank => 'TODOS LOS MODOS'}, {:class=> "form-control input-lg"})
				    %>
				  </div>
		  		  <div class="form-group">
					<%=  
				    	collection_select(:budget_item, :id, BudgetItem.all, :id, :name, {:include_blank => 'TODOS LOS ITEMS'}, {:class=> "form-control input-lg"})
				    %>
				  </div>
		  		  <div class="form-group">
					<%=  
				    	collection_select(:selection_method, :id, SelectionMethod.all, :id, :name, {:include_blank => 'TODOS LOS TIPOS DE SELECCION'}, {:class=> "form-control input-lg"})
				    %>
				  </div>
				</div>
			</div>
			</form>	
			</div><!-- /row -->
	    </div> <!-- /container -->
	</div><!-- /headerwrap -->
	
<div class="container">
	<div id="contracts"><%= render 'contracts' %></div>
</div>

<script>
$(function() {
  $('a#advanced').click(function(event){
    event.preventDefault();
    $('div#advanced_form').toggle();
    var text = $('a#advanced').text();
    $('a#advanced').text(
        text == "Mostrar busqueda avanzada" ? "Ocultar busqueda avanzada" : "Mostrar busqueda avanzada");
  });
});
</script>